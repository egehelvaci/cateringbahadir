{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/index.ts",
    "src/config/**/*",
    "src/middleware/**/*",
    "src/utils/**/*",
    "src/controllers/**/*",
    "src/services/ai-classification.service.ts",
    "src/services/automated-mail-processor.service.ts",
    "src/services/email-processing.service.ts",
    "src/services/gmail-polling.service.ts",
    "src/services/gmail.service.ts",
    "src/services/google-oauth.service.ts",
    "src/services/imap-gmail.service.ts",
    "src/services/imap-polling.service.ts",
    "src/services/lightweight-filter.service.ts",
    "src/services/mail-export.service.ts",
    "src/services/maritime-routing.service.ts",
    "src/services/microsoft-graph.service.ts",
    "src/services/openai.service.ts",
    "src/services/order.service.ts",
    "src/services/regex-extraction.service.ts",
    "src/services/ml/**/*",
    "src/routes/analytics.routes.ts",
    "src/routes/auth.routes.ts",
    "src/routes/dashboard.routes.ts",
    "src/routes/debug.routes.ts",
    "src/routes/email-processing.routes.ts",
    "src/routes/employee.routes.ts",
    "src/routes/google-oauth.routes.ts",
    "src/routes/imap-gmail.routes.ts",
    "src/routes/inbox.routes.ts",
    "src/routes/mail-export.routes.ts",
    "src/routes/manual-email.routes.ts",
    "src/routes/microsoft-graph.routes.ts",
    "src/routes/notifications.routes.ts",
    "src/routes/order.routes.ts",
    "src/routes/settings.routes.ts",
    "src/scripts/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts",
    "src/routes/vessel.routes.ts",
    "src/routes/cargo.routes.ts", 
    "src/routes/port.routes.ts",
    "src/routes/vessel-cargo-matching.routes.ts",
    "src/routes/vessel-cargo-auto-matching.routes.ts",
    "src/services/vessel-cargo-matching.service.ts",
    "src/services/vessel-cargo-parsing.service.ts"
  ]
}